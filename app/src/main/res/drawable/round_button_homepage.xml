<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--if button is pressed button_pressed drawable will be called-->
    <item android:state_pressed="true" android:drawable="@drawable/button_pressed"/>

    <!--if user not pressing on the button, button_normal drawable will be called-->
    <item android:state_pressed="false" android:drawable="@drawable/button_normal"/>
</selector>